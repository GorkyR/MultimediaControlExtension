{
	"manifest_version": 2,

	"name": "MultimediaKeysSupport",
	"description": "Adds Multimedia Keys support for Youtube and Soundcloud",
	"version": "0.9.875",
	"author": "GorkyR",

	"background": {
		"page": "background.html"
	},

	"commands":{
		"playpause":{
			"suggested_key":{
				"default": "MediaPlayPause"
			},
			"description": "Pauses/Plays"
		},

		"next":{
			"suggested_key":{
				"default": "MediaNextTrack"
			},
			"description": "Plays Next"
		},

		"prev":{
			"suggested_key":{
				"default": "MediaPrevTrack"
			},
			"description": "Replays/Plays previous"
		}
	},
	
	"content_scripts": [{
		"matches": ["https://www.youtube.com/*"],
		"js": ["ytmediacontrol.js"]
	},{
		"matches": ["https://soundcloud.com/*"],
		"js": ["scmediacontrol.js"]
	}]
}